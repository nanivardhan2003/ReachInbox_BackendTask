PORT=4000

# OpenAI
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Slack incoming webhook or app webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# External webhook (webhook.site url)
HOOK_URL=https://webhook.site/YOUR-ID

# Elasticsearch
ELASTIC_URL=http://localhost:9200

# Postgres (vector DB)
PG_CONN=postgresql://postgres:postgres@localhost:5432/onebox

# Example IMAP accounts (replace with real)
# for each account: id, host, port, secure, user, pass
# We'll pass these via the add-account API, but examples:
IMAP_EXAMPLE_HOST=imap.example.com
IMAP_EXAMPLE_PORT=993
IMAP_EXAMPLE_SECURE=true
IMAP_EXAMPLE_USER=you@example.com
IMAP_EXAMPLE_PASS=yourpassword
